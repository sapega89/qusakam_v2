script/source = "# Generic orb collectible.
extends Area2D

func _ready() -> void:
	# Register as storable with a marker only if object has scene_file_path
	# (i.e. it was placed in the scene, not dynamically created)
	# For dynamically created objects, we skip registration
	if has_meta(\"object_id\"):
		# This is a dynamically created collectible, skip MetSys registration
		pass
	else:
		# Register as storable with a marker. The marker will appear on the map when the orb is first discovered (i.e. get instantiated).
		MetSys.register_storable_object_with_marker(self)
	
	# Connect signal safely (check if not already connected)
	if not body_entered.is_connected(collect):
		body_entered.connect(collect)

func collect(body: Node2D) -> void:
	# Check if player collided.
	if not body.is_in_group(&\"player\"):
		return
	# Increase collectible counter.
	Game.get_singleton().collectibles += 1
	
	# Store the orb only if it was registered in MetSys (i.e. not dynamically created)
	if not has_meta(\"object_id\"):
		# Store the orb. This will automatically assign the collected marker.
		MetSys.store_object(self)
	
	# Storing object does not free it automatically.
	queue_free()
"

